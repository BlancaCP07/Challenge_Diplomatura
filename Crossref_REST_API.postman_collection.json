{
  "info": {
    "name": "Crossref REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Buscar publicaciones por palabra clave",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.crossref.org/works?query=machine+learning",
          "protocol": "https",
          "host": [
            "api",
            "crossref",
            "org"
          ],
          "path": [
            "works"
          ],
          "query": [
            {
              "key": "query",
              "value": "machine learning"
            }
          ]
        }
      }
    },
    {
      "name": "Buscar por DOI espec\u00edfico",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.crossref.org/works/10.1038/nphys1170",
          "protocol": "https",
          "host": [
            "api",
            "crossref",
            "org"
          ],
          "path": [
            "works",
            "10.1038/nphys1170"
          ]
        }
      }
    },
    {
      "name": "Filtrar por fecha de publicaci\u00f3n",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.crossref.org/works?filter=from-pub-date:2020-01-01,until-pub-date:2020-12-31",
          "protocol": "https",
          "host": [
            "api",
            "crossref",
            "org"
          ],
          "path": [
            "works"
          ],
          "query": [
            {
              "key": "filter",
              "value": "from-pub-date:2020-01-01,until-pub-date:2020-12-31"
            }
          ]
        }
      }
    },
    {
      "name": "Obtener referencias de un DOI",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.crossref.org/works/10.1038/nphys1170/references",
          "protocol": "https",
          "host": [
            "api",
            "crossref",
            "org"
          ],
          "path": [
            "works",
            "10.1038/nphys1170",
            "references"
          ]
        }
      }
    },
    {
      "name": "Listar miembros (editores)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.crossref.org/members",
          "protocol": "https",
          "host": [
            "api",
            "crossref",
            "org"
          ],
          "path": [
            "members"
          ]
        }
      }
    }
  ]
}